@model ApplicationVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="register-content" ng-controller="" >
    <div class="container d-flex h-85">
        <div class="row center">
            <div class="col-lg-4 d-lg-flex d-none">
            </div>

            <div class="col-lg-12 col-md-8 col-sm-12">

                <div class="form-body mb-4 mt-4" style="background: #fff!important">
                    <div class="form-text">

                        <p align="center"><img src="./images/sitelogo.png" alt="holder" align="center"></p>
                        <br />
                       
                        <h4 align="center" style="color: #000;"><b>AGENT  APPLICATION FORM</b></h4>

                    </div>
                    @*<form method="post" onsubmit=" sendFormData('@Url.Action("Login", "User")','POST',this); return false">*@
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputEmail4">Lastname</label>
                            <input type="text" class="form-control" id="inputEmail4" placeholder="Enter Lastname" required="required" asp-for="Lastname">
                        </div>
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputPassword4">Firstname</label>
                            <input type="text" class="form-control" id="inputPassword4" placeholder="Enter Firstname" required="required" asp-for="Firstname">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputEmail4">Contact</label>
                            <input type="tel" class="form-control" id="inputEmail4" placeholder="Enter Contact" required="required" asp-for="Contact">
                        </div>
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputPassword4">Company Name </label>
                            <input type="text" class="form-control" id="inputPassword4" required="required" placeholder="Enter Company Name" asp-for="CompanyName">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputEmail4">Country</label>
                            <input type="text" class="form-control" id="inputEmail4" required="required" placeholder="Enter Country" asp-for="Country">
                        </div>
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputPassword4">Web URLS</label>
                            <input type="url" class="form-control" id="inputPassword4" required="required" placeholder="Enter Website" asp-for="WebURL">
                        </div>
                    </div>
                    <div class="form-group" style="color: #000">
                        <label for="inputAddress">Username</label>
                        <input type="email" class="form-control" id="inputAddress" required="required" asp-for="Username" placeholder="Enter Username">
                    </div>
                    <div class="form-group" style="color: #000">
                        <label for="inputAddress">Email</label>
                        <input type="email" class="form-control" id="inputAddress" required="required" asp-for="Email" placeholder="Enter Email">
                    </div>

                    <div class="form-group" style="color: #000">
                        <label for="inputAddress2">Address  </label>
                        <input type="text" class="form-control" id="inputAddress2" required="required" asp-for="Address" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6" style="color: #000">
                            <label for="inputCity">City</label>
                            <input type="text" class="form-control" id="inputCity" required="required" asp-for="City">
                        </div>
                        <div class="form-group col-md-4" style="color: #000">
                            <label for="inputCity">State</label>
                            <input type="text" class="form-control" asp-for="State" required="required" id="inputCity">
                        </div>
                        @*<div class="form-group col-md-4" style="color: #000">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>*@
                        <div class="form-group col-md-2" style="color: #000">
                            <label for="inputZip">Zip</label>
                            <input type="text" class="form-control" asp-for="Zip" required="required" id="inputZip">
                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            I hereby agree that the information given is true, accurate and complete as of the date of this application submission.
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">Apply</button>

                    </div>

                </form>


                        <br>

                        <p style="color: #fff;"><a href="sign-up.html" style="color: #fff;s">Create Account</a><a href="#" style="color: #fff; float: right;">Forgot Password</a></small>
</div>
            </div>
        </div>

    </div>
</section>